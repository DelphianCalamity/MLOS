{
    "name": "Ubuntu Kernel",
    "class": "mlos_bench.environment.AppEnv",

    "config": {

        "tunable_params": ["kernel"],

        "const_args": {
            "storageAccountName": "osatsharedstorage",
            "storageFileShareName": "os-autotune-file-share",
            "storageAccountKey": "STORAGE ACCOUNT KEY FROM `az storage account keys list`",
            "mountPoint": "/mnt/osat_fs"
        },

        "setup": [
            "mkdir -p $mountPoint",
            "mount -t cifs //$storageAccountName.file.core.windows.net/$storageFileShareName $mountPoint -o username=$storageAccountName,password=$storageAccountKey,serverino,nosharesock,actimeo=30"
        ],

        "run": [
            "ls -lap $mountPoint"
        ],

        "teardown": [
            "umount $mountPoint"
        ]
    }
}
