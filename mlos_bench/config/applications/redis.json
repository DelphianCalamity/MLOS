{
    "name": "Redis on Linux",
    "class": "mlos_bench.environment.AppEnv",

    "config": {

        "tunable_params": ["redis"],

        "const_args": {
            "mountPoint": "/mnt/osat_fs",
            "inputPrefix": "tmp_trial_id/input",
            "outputPrefix": "tmp_trial_id/output"
        },

        "setup": [
            "$mountPoint/setup-workload.sh",
            "$mountPoint/setup-app.sh"
        ],

        "run": [
            "mkdir -p /tmp/mlos_bench/output",
            "mkdir -p $mountPoint/$outputPrefix",
            "$mountPoint/run-workload.sh",
            "cp -r /tmp/mlos_bench/output/* $mountPoint/$outputPrefix"
        ],

        "teardown": [
            "$mountPoint/cleanup-workload.sh",
            "$mountPoint/cleanup-app.sh"
        ],

        "postprocess": "applications/process_redis_results.py"
    }
}
